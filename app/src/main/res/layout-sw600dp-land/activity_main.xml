<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/number"
        android:ellipsize="start"
        android:gravity="end|center"
        android:textSize="25sp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/number"
        android:background="@color/button"
        android:gravity="end|center"
        android:ellipsize="end"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:textSize="20sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button"
        android:padding="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:background="@drawable/action_button_box"
                android:text="CE" />


            <TextView
                android:id="@+id/tvSeven"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="7" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="8" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="9" />

            <ImageView
                android:id="@+id/tvDivide"
                style="@style/ActionButtonStyle"
                android:src="@drawable/icons_divide"
                android:scaleType="center"
                android:background="@drawable/action_button_box" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvLeftBracket"
                style="@style/ActionButtonStyle"
                android:background="@drawable/action_button_box"
                android:text="(" />

            <TextView
                android:id="@+id/tvFour"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="4" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="5" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="6" />

            <ImageView
                android:id="@+id/tvMultiple"
                style="@style/ActionButtonStyle"
                android:src="@drawable/icons_multiple"
                android:scaleType="center"
                android:background="@drawable/action_button_box" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvRightBracket"
                style="@style/ActionButtonStyle"
                android:background="@drawable/action_button_box"
                android:text=")" />

            <TextView
                android:id="@+id/tvOne"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="1" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="2" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="3" />

            <ImageView
                android:id="@+id/tvMinus"
                style="@style/ActionButtonStyle"
                android:src="@drawable/icons_minus"
                android:scaleType="center"
                android:background="@drawable/action_button_box" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tvEqual"
                style="@style/ActionButtonStyle"
                android:src="@drawable/equal_sign"
                android:scaleType="center"
                android:background="@drawable/action_button_box" />

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="." />

            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:background="@drawable/number_button_box"
                android:text="0" />

            <ImageView
                android:id="@+id/tvBack"
                style="@style/NumberButtonStyle"
                android:src="@drawable/baseline_backspace_black_18dp"
                android:scaleType="center"
                android:background="@drawable/number_button_box" />

            <ImageView
                android:id="@+id/tvPlus"
                style="@style/ActionButtonStyle"
                android:src="@drawable/math_plus"
                android:scaleType="center"
                android:background="@drawable/action_button_box" />

        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>